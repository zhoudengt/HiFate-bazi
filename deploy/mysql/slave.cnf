# MySQL 从库配置
[mysqld]
# 服务器 ID（从库为 2）
server-id = 2

# 开启二进制日志（从库也开启，方便故障切换）
log-bin = mysql-bin
binlog-format = ROW
binlog-row-image = FULL
expire_logs_days = 7
max_binlog_size = 100M

# 中继日志
relay-log = mysql-relay-bin
relay-log-index = mysql-relay-bin.index
log-slave-updates = ON

# GTID 模式
gtid-mode = ON
enforce-gtid-consistency = ON

# 只读（从库默认只读，故障切换时改为读写）
read-only = ON
# super-read-only = ON  # 如果需要更严格的只读

# 字符集
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# 连接数（根据15个用户 + 11个服务调整）
# 计算：15用户×3并发=45，11服务×2初始=22，总计67，配置80留缓冲
max_connections = 100        # 从50增加到100
max_user_connections = 80   # 从40增加到80（15用户×3并发 + 11服务×2初始 = 67，留13个缓冲）

# InnoDB 优化（内存限制3GB，优化为1.5GB buffer pool）
innodb_buffer_pool_size = 1536M
innodb_log_file_size = 128M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT
innodb_log_buffer_size = 16M
innodb_thread_concurrency = 8
innodb_read_io_threads = 4
innodb_write_io_threads = 4

# 慢查询（关闭以节省内存）
slow_query_log = OFF
# slow_query_log_file = /var/lib/mysql/slow.log
# long_query_time = 2

# 其他
skip-name-resolve
default-time-zone = '+08:00'
